<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.cathal.ultimetable.MainActivity"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblStudentID"
        android:id="@+id/textView"
        android:layout_marginTop="60dp"
        android:textColor="#FF721535"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textIsSelectable="false"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numeric="integer"
        android:ems="10"
        android:id="@+id/txtID"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:inputType="numberDecimal" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:text="@string/btnSubmit"
        android:id="@+id/btnSubmit"
        android:layout_alignParentBottom="true"
        android:background="#ff376f60"
        android:textStyle="bold"
        android:textColor="#FF721535" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ul_logo_text"
        android:contentDescription="UL Logo" />

</RelativeLayout>
